<UserControl x:Class="ServerAppTCP.Views.UserControls.ChatUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerAppTCP.Views.UserControls"
             mc:Ignorable="d" 
             Height="309" Width="205">
    <Canvas Background="White">
        <TextBox Text="{Binding MessageText}" FontSize="15" TextWrapping="Wrap" Height="255" Width="195" HorizontalAlignment="Center" Canvas.Left="5" VerticalAlignment="Top" Canvas.Top="2" ></TextBox>
        <Button Command="{Binding SendCommand}" Height="40" Width="181" Canvas.Left="11" Canvas.Top="263" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25">Send</Button>
    </Canvas>
</UserControl>
